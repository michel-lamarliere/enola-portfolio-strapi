        "images": {
            "type": "media",
            "multiple": true,
            "required": true,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "date": {
            "type": "date",
            "required": false
        },
        "showsDate": {
            "type": "boolean",
            "default": true,
            "required": false
        },
        "dateAltText": {
            "type": "string"
        }
